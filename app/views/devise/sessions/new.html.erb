<div class="container" style="position: relative;">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h3 style = "margin-left: 45%" >登录</h3>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.label '邮箱:' %>
          <%= f.email_field :email, class: "form-control", style: "width: 100%" %>
        </div>
        <div class="form-group">
          <%= f.label '密码:' %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "width: 100%"  %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %> <%= t('remember_me', :default => "记住我") %>
            <% end %>
          </div>
        <% end %>
        <%= f.submit  t('sign_in', :default => "确定"), class: "btn btn-primary", :style => "margin-left: 45%"  %>
      <% end %>
    </div>
  </div>
  <%#= render '/layouts/messages' %>
  <%#= render "devise/shared/links" %>
</div>
